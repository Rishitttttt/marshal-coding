generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String   @unique
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())

  messages     Message[]
}

model Sheet {
  id        String   @id @default(uuid())
  title     String
  type      String
  createdAt DateTime @default(now())

  problems  Problem[]
}

model Problem {
  id          String   @id @default(uuid())
  title       String
  description String
  difficulty  String
  sheetId     String
  createdAt   DateTime @default(now())

  sheet       Sheet    @relation(fields: [sheetId], references: [id])
  messages    Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  userId    String
  problemId String

  user      User    @relation(fields: [userId], references: [id])
  problem   Problem @relation(fields: [problemId], references: [id])

  @@index([problemId, createdAt])
}

